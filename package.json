{
	"scripts": {
		"dev:greeter": "concurrently --kill-others-on-fail 'node styles.js --watch' 'nodemon -e ts,tsx -i \"**/*.style.ts\" -x \"ags run -d . --gtk 4 greeter.app.ts\"'",
		"dev:main": "concurrently --kill-others-on-fail 'node styles.js --watch' 'nodemon -e ts,tsx -i \"**/*.style.ts\" -x \"ags run -d . --gtk 4 main.app.ts\"'",
		"format:check": "prettier -c src",
		"format:write": "prettier -w src",
		"generate-types": "npm ci && ags types -d . -u"
	},
	"type": "module",
	"dependencies": {
		"ags": "*",
		"gnim": "*"
	},
	"prettier": {
		"semi": false,
		"tabWidth": 2
	},
	"devDependencies": {
		"concurrently": "^9.2.1",
		"postcss": "^8.5.6",
		"postcss-modules": "^6.0.1",
		"prettier": "^3.6.2",
		"sass": "^1.94.2",
		"watcher": "^2.3.1"
	},
	"volta": {
		"node": "24.11.1"
	}
}
